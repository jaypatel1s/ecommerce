              <div class="row">
                <div class="col-4">
                <%= image_tag "product/f23.jpg", class: "card-img img-fluid", alt: "Product Image 4" %>
                 
                </div>
                <div class="col-4">
                <%= image_tag "product/f23.jpg", class: "card-img img-fluid", alt: "Product Image 4" %>

                </div>
                <div class="col-4">
                <%= image_tag "product/f23.jpg", class: "card-img img-fluid", alt: "Product Image 4" %>

                </div>
              </div>
            </div>
            <!--/.Second slide-->

            <!--Third slide-->
            <div class="carousel-item">
              <div class="row">
                <div class="col-4">
                <%= image_tag "product/f23.jpg", class: "card-img img-fluid", alt: "Product Image 4" %>

                </div>
                <div class="col-4">
                <%= image_tag "product/f23.jpg", class: "card-img img-fluid", alt: "Product Image 4" %>

                </div>
                <div class="col-4">
                <%= image_tag "product/f23.jpg", class: "card-img img-fluid", alt: "Product Image 4" %>

                </div>
              </div>
            </div>
            <!--/.Third slide-->
          </div>
          <!--End Slides-->
        </div>
        <!--End Carousel Wrapper-->
        <!--Start Controls-->
        <div class="col-1 align-self-center">
          <a
            href="#multi-item-example"
            role="button"
            data-bs-slide="next"
          >
            <i class="text-dark fas fa-chevron-right"></i>
            <span class="sr-only">Next</span>
